
storage "file" {
  path = "/opt/vault_data"
}

# HTTPS listener
listener "tcp" {
  address       = "0.0.0.0:8200"
#  tls_cert_file = "/opt/vault_data/tls/tls.crt"
#  tls_key_file  = "/opt/vault_data/tls/tls.key"
   tls_disable   = true
}
api_addr       = "http://127.0.0.1:8200"

cluster_addr   = "https://127.0.0.1:8201"

ui             = true

disable_mlock  = true

disable_cache  = true

log_level      = "trace"

cluster_name   = "vault-integrated-storage-cluster"

